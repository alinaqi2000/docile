<?php

use Docile\Console\Commands\RunCommand;

require __DIR__ . '/vendor/autoload.php';

load_env();

require __DIR__ . '/config/constants.php';

$command = new RunCommand();

switch ($argv[1]) {
    case 'deliver':
        $command->server();
        break;
    case 'migrate':
        $command->migrate(...$argv);
        break;
    case 'train':
        $command->test();
        break;
    default:
        console_error(INVALID_TERMINAL_COMMAND);
}
